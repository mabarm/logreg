<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.logreg.CommunityHall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include layout="@layout/toolbar" />

        </android.support.design.widget.AppBarLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/textView28"
            android:text="COMMUNITY HALL"
            android:textSize="38dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/textView23"
            android:text=" Employee Details"
            android:textSize="26dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#d51e1e" />



        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView2"
            android:text="Employee No"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView"/>

        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/empno"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/textView2"
            android:ems="10"
            android:inputType="numberSigned"/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView3"
            android:text="Employee Name"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:layout_weight="0.13" />

        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/empname"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/textView3"
            android:ems="10"
            android:inputType="textPersonName"/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginLeft="10dp"
            android:text="Employee Desg"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView3"/>

        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/desg"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/empname"
            android:layout_alignLeft="@+id/empname"
            android:layout_alignEnd="@+id/empname"
            android:layout_alignRight="@+id/empname"/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView5"
            android:text="Employee Dept"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/editText4"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_marginTop="30dp" />

        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/dept"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:inputType="textPersonName"/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:text="Employee Grade"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView5"/>

        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/grade"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/textView6"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignStart="@+id/editText4"
            android:layout_alignLeft="@+id/editText4"
            android:layout_marginBottom="20dp" />


        <TextView
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/textView"
            android:textColor="#d51e1e"
            android:text=" Hiring Details"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requisition No"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/black"

            android:layout_marginLeft="10dp" />
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/reqno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requisition Date"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"

            />
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/reqdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:ems="10"
            />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hiring Facility"
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0">
                    <RadioButton
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Community Hall"
                        android:checked="false"
                        />
                    <RadioButton
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Swimming Pool"
                        android:checked="false"
                        />
                    <RadioButton
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Both of above"
                        android:checked="false"
                        />

                </RadioGroup>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Reason"
                    android:id="@+id/textView8"
                    android:layout_column="0"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:textSize="15dp"
                    android:layout_marginTop="30dp" />
            </TableRow>

            <TableRow android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <Spinner
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_marginLeft="30dp"
                    android:spinnerMode="dropdown"

                    android:layout_column="0">
                </Spinner>
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tdatefrom"
                    android:text="Hiring Date From"
                    android:layout_column="0"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:layout_span="5"
                    android:layout_marginTop="30dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Date"
                    android:id="@+id/startDateDisplay"
                    android:layout_column="0"
                    android:layout_span="5"
                    android:layout_marginTop="10dp" />
            </TableRow>



            <TableRow android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="5dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tdateto"
                    android:text="Hiring Date to"
                    android:inputType="date"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:layout_marginTop="30dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/endDateDisplay"
                    android:layout_column="0"
                    android:layout_span="5"
                    android:text="Choose Date"
                    android:layout_marginTop="10dp" />
            </TableRow>
        </TableLayout>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="No of Days"
            android:id="@+id/tnod"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_marginTop="30dp" />


        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:id="@+id/nod"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv8"
            android:text="Refundable Security Deposit"
            android:inputType="numberSigned"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_marginTop="30dp" />




        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:ems="10"
            android:id="@+id/ref"
            android:layout_column="0"
            android:layout_span="5"
            android:text="Rs 500"
            android:inputType="none" />


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv9"
            android:text="Booking Fees"
            android:inputType="number"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />



        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:id="@+id/ebookfee" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact Details"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:textSize="26dp"
            android:textColor="#d51e1e"
            android:layout_marginTop="30dp" />

        <TextView android:id="@+id/tvi2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" Quater No"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/empname"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quarno" />

        <TextView android:id="@+id/tcontno"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Mobile No"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <EditText android:id="@+id/contno"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignStart="@+id/empname"
            android:layout_alignLeft="@+id/empname"
            android:ems="10"
            android:inputType="number"
            android:layout_alignBottom="@+id/textView3"/>

        <TextView android:id="@+id/tvi4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:text=" Email"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <EditText android:id="@+id/emaill"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignStart="@+id/desg"
            android:layout_alignLeft="@+id/desg"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_alignBottom="@+id/textView4"/>

        <TextView android:id="@+id/tvi5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Pincode"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_marginTop="30dp" />

        <EditText android:id="@+id/pincode"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignStart="@+id/editText4"
            android:layout_alignLeft="@+id/editText4"
            android:ems="10"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/textView5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:id="@+id/submit12"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight= "10dp"

            android:id="@+id/submit"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" Submit"
            android:textColor="@color/white"
            android:background="@color/btn_login_register"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" />

    </LinearLayout>
</ScrollView>
