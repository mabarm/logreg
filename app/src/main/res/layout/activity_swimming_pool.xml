<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.user.logreg.SwimmingPool">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include layout="@layout/toolbar" />

        </android.support.design.widget.AppBarLayout>

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/textView14"
            android:text="Registration for Sarovar Acquatic Club "
            android:textStyle="bold"
            android:layout_toEndOf="@+id/textView15"
            android:layout_toRightOf="@+id/textView15"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_gravity="top|center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Details :"
            android:id="@+id/textView18"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#d51e1e"

            android:textStyle="bold"
            android:textSize="26dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="118dp"
            android:textColor="@android:color/black"
            android:text="Employee No"
            android:id="@+id/tempno"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:id="@+id/empno"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:inputType="numberSigned"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:text="Employee Name"
            android:id="@+id/tempname"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:id="@+id/empname"
            android:layout_alignLeft="@+id/editText6"
            android:layout_alignStart="@+id/editText6"
            android:inputType="textPersonName" android:ems="10"
            android:layout_above="@+id/textView9"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:text="Designation"
            android:id="@+id/tempdesg"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:id="@+id/empdesg"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:text="Grade"
            android:id="@+id/tgrade"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"/>

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:id="@+id/grade"
            android:layout_above="@+id/textView10"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:text="Section"
            android:id="@+id/tsection"
            android:layout_alignTop="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:id="@+id/section"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toLeftOf="@+id/editText7"
            android:layout_toStartOf="@+id/editText7"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remarks"
            android:id="@+id/tremarks"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:id="@+id/remarks"
            android:layout_alignTop="@+id/section"
            android:layout_alignRight="@+id/editText11"
            android:layout_alignEnd="@+id/editText11"
            android:layout_toRightOf="@+id/textView16"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:text="Department"
            android:id="@+id/tdept"
            android:layout_alignLeft="@+id/tsection"
            android:layout_alignStart="@+id/tsection"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/dept"
            android:layout_alignLeft="@+id/section"
            android:layout_alignStart="@+id/section"
            android:layout_alignTop="@+id/editText11"
            android:layout_toLeftOf="@+id/editText7"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:text="Contact No"
            android:id="@+id/tcontno"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11"/>

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/contno" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:text="Quarter No"
            android:id="@+id/tquarno"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView10"/>


        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/quarno" />

        <TextView

            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family Details :"
            android:id="@+id/textView23"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#d51e1e"
            android:textSize="20dp"
            android:textAlignment="center" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Name"
            android:id="@+id/tmemname"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/memname"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/textView7"
            android:ems="10"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member DOB"
            android:id="@+id/tmemdob"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/memdob" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member relation"
            android:id="@+id/tememrel"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/memrel" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swimming Level"
            android:id="@+id/tswimlev"
            android:layout_marginTop="30dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <EditText
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/swimlev" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView9"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView8"/>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:id="@+id/submit12"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView9"/>

        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/submit"
            android:text="SUBMIT"
            android:background="@color/btn_login_register"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>
</ScrollView>